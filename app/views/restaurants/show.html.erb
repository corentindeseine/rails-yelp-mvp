<div class="container">
  <h1><%= @restaurant.name %></h1>
  <p> <%= @restaurant.address %></p>
  <p> <%= @restaurant.category %></p>
  <p> <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item"><%= "*" * review.rating %> - <%= review.content %></li>
      <% end %>
  </p>

<%= link_to "+ Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary"%>

<%= link_to "Go back to the list", restaurants_path, class: "btn btn-primary"%>

</div>
